<form action="/admin/update-roles" method="post" >
  <div class="d-flex p-2 justify-content-between align-items-center">
    <h1>Usúarios</h1>
    <button type="submit" class="btn btn-success">Atualizar</button>
  </div>

  <div class="container mt-4">
    <div class="row text-center">
      <div class="col-md-4">
        <p><strong>Nome</strong></p>
      </div>
      <div class="col-md-4">
        <p><strong>E-mail</strong></p>
      </div>
      <div class="col-md-4">
        <p><strong>Admin</strong></p>
      </div>
      <hr>
    </div>

    {{#each usuarios}}
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4">
          <p>{{nome}}</p>
        </div>
        <div class="col-md-4">
          <p>{{email}}</p>
        </div>
        <div class="col-md-4">
          <select name="roles[{{_id}}]" class="form-select form-select-sm">
            <option value="1" {{#if eAdmin}}selected{{/if}}>Admin</option>
            <option value="0" {{#unless eAdmin}}selected{{/unless}}>Usuário comum</option>
          </select>
        </div>
        <hr>
      </div>
    </div>
    {{/each}}
</form>