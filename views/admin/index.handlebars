<form action="/admin/update-roles" method="post">
  <div class="d-flex p-2 justify-content-between align-items-center">
    <h1>Usuários</h1>
    <button type="submit" class="btn btn-success">Atualizar</button>
  </div>

  <div class="container mt-4">
    <!-- Cabeçalhos -->
    <div class="row text-center fw-bold border-bottom py-2">
      <div class="col-md-4">Nome</div>
      <div class="col-md-4">E-mail</div>
      <div class="col-md-4">Admin</div>
    </div>

    <!-- Lista de usuários -->
    {{#each usuarios}}
    <div class="row text-center align-items-center border-bottom py-3">
      <div class="col-md-4">
        <p class="mb-0">{{nome}}</p>
      </div>
      <div class="col-md-4">
        <p class="mb-0">{{email}}</p>
      </div>
      <div class="col-md-4">
        <select name="roles[{{_id}}]" class="form-select form-select-sm">
          <option value="1" {{#if eAdmin}}selected{{/if}}>Admin</option>
          <option value="0" {{#unless eAdmin}}selected{{/unless}}>Usuário comum</option>
        </select>
      </div>
    </div>
    {{/each}}
  </div>
</form>
