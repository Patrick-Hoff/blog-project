<h1>Usúarios</h1>

<div class="container mt-4">
  <div class="row text-center">
    <div class="col-md-4">
      <p><strong>Nome</strong></p>
    </div>
    <div class="col-md-4">
      <p><strong>E-mail</strong></p>
    </div>
    <div class="col-md-4">
      <p><strong>Admin</strong></p>
    </div>
    <hr>
  </div>

  {{#each usuarios}}
  <div class="container">
    <div class="row text-center">
      <div class="col-md-4">
        <p>{{nome}}</p>
      </div>
      <div class="col-md-4">
        <p>{{email}}</p>
      </div>
      <div class="col-md-4">
        <select name="eAdmin" class="form-select form-select-sm">
          <option value="1" {{#if eAdmin}}selected{{/if}}>Admin</option>
          <option value="0" {{#unless eAdmin}}selected{{/unless}}>Usuário comum</option>
        </select>
      </div>
      <hr>
    </div>
  </div>
  {{/each}}
